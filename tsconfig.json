{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["test/**"]
}
